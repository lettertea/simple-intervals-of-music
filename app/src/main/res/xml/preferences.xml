<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="Fixed note">
        <androidx.preference.ListPreference
            android:summary="%s"
            android:defaultValue="None"
            android:entries="@array/positions"
            android:entryValues="@array/positions"
            android:key="position"
            android:title="Position" />


    <androidx.preference.ListPreference
        android:summary="%s"
        android:defaultValue="4"
        android:entries="@array/notes"
        android:entryValues="@array/notes_values"
        android:key="note"
        android:title="Note" />

    <androidx.preference.ListPreference
        android:summary="%s"
        android:defaultValue="4"
        android:entries="@array/octaves"
        android:entryValues="@array/octaves_values"
        android:key="octave"
        android:title="Octave" />
    </PreferenceCategory>
    <PreferenceCategory android:title="Interval">
    <androidx.preference.ListPreference
        android:summary="%s"
        android:defaultValue="Random"
        android:entries="@array/interval_types"
        android:entryValues="@array/interval_types"
        android:key="interval_type"
        android:title="Interval type" />

    <androidx.preference.MultiSelectListPreference
        android:entries="@array/included_intervals"
        android:entryValues="@array/included_intervals_values"
        android:defaultValue="@array/included_intervals_values"
        android:key="included_intervals"
        android:title="Included intervals" />
    </PreferenceCategory>

</PreferenceScreen>